<h2>いいね一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>投稿</th>
      <th>写真</th>
      <th>投稿者</th>
    </tr>
  </thead>
  <tbody>
    <% @like_posts.each do |post| %>
    <tr>
      <td><%= link_to "#{post.body}", post_path(post.id) %></td>
      <td>
        <%= post_image_or_default(post.image) %>
      </td>
      <td><%= link_to post.user.name, user_path(post.user) %></td>
      <td>
        <%= follow_btn(post.user) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>