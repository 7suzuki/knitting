<%= form_with model: @post do |f| %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>画像</h4>
	<%= f.file_field :image, accept: "image/*" %>
	
  <%= f.submit "投稿" %>
<% end %>

<% if @post.errors.any? %>
  <%= @post.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
