<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.body %></td>
      <td>
        <% if @user == current_user %>
          <%= link_to "編集", edit_post_path(post) %>
          <%= link_to "削除", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
