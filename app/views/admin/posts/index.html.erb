<h1>全投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>ステータス</th>
      <th>投稿</th>
      <th>投稿写真</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.name %></td>
      <td>
        <span>
          <%= post.user.active_status %>
        </span>
      </td>
      <td><%= post.body %></td>
      <td>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% else %>
          <%= image_tag "no_image.jpg", size: "100x100" %>
        <% end %>
      </td>
      <td>コメント件数：<%= post.post_comments.count %></td>
      <td><%= link_to "削除", admin_post_path(post.user), method: :delete, data: { confirm: "本当に削除しますか？" } %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
